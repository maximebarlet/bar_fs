{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ title }}</h5>
                    <p class="card-text">
                        Page d'accueil
                    </p>
                </div>
            </div>
            {% for beer in last3beers %}
                <a href="{{ path('beer_show', { 'id' : beer.id }) }}">
                    {{ beer.name }}
                </a>
                <br/>
                {{ beer.description }}
            {% endfor %}
        </div>
    </div>
{% endblock %}


